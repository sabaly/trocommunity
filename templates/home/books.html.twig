{% extends 'global.html.twig' %}

{% block title %}{{ parent() }} Espace lecteur{% endblock %}

{% block  stylesheets%}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/reader/reader_style.css') }}"/>
    <style type="text/css">
        .books-container {
            width: 100%;
            margin: 10px;
            display: flex;
            justify-content: space-around;
            align-items: center;
        }
    </style>
{% endblock %}

{% block sections %}
    <section class="books-container">
        <div class="books row">
        {% for item in 0..10 %}
            <div class="image col-md-3 col-sm-6">
                <img src="{{ asset('assets/img/uploads/5d8f18b813a30fca89045061fb8403c1.jpeg')}}" width="250" height="300"/>
                <h3><a href="">Nom Livre</a></h3>
            </div>
        {% endfor %}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/readerApp.js')}}"></script>
    <script src="{{ asset('assets/js/validation.js')}}"></script>
{% endblock %}